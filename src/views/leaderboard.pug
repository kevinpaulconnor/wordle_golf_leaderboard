
doctype html
html
	head
		title Leaderboard

		link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css' rel='stylesheet')
		script(src='https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js' type='text/javascript')
		script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js' type='text-javascript')

	body
		div.container.my-4
			h2.text-center.mb-4 Leaderboard
			table.table.table-sm.table-striped
				thead
					tr
						th.text-uppercase.text-center Hole

						each hole in holes
							th.text-center #{hole.number}

					tr
						th.text-uppercase.text-center Par

						each hole in holes
							th.text-center #{hole.par}

				tbody
					each player in standings
						tr
							td #{player.displayName}

							each hole in player.holes
								if hole.score
									td.text-center #{hole.score}
								else
									td
