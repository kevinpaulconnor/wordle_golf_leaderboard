doctype html
html
  head
    title Schedule and Results
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css' rel='stylesheet')
    script(src='https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js' type='text/javascript')
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/js/bootstrap.min.js' type='text-javascript')

  body
    div.container.my-4
      h2.text-center.mb-4 Schedule and Results
      table.table.table-sm.table-striped
        thead
          tr
            th.text-uppercase.text-center Tournament
            th.text-uppercase.text-center Wordles
            th.text-uppercase.text-center Winner
        tbody
          each tournament, i in data
            tr.lh-lg
              td.text-center 
                  a(href=`${i}.html`) #{tournament.name}
              td.text-center #{tournament.beforeStartWordle + 1} - #{tournament.beforeStartWordle + 18}
              if tournament.id !== data.current
                  td.text-center #{tournament.leaders}
              else
                  td
